        <a href="add/waterPurification">水质净化</a>
        <a href="add/climateRegulation">气候调节</a>
        <!-- <a href="add/speciesConservation">物种保育</a> -->
    </div>

    <div id="mySidepanel" class="side-nav">
        <a href="javascript:void(0)" class="closebtn" onclick="closePanel()">&times;</a>

        <div id="pieChart" style="width: 500px;height:400px;"></div>
        <div id="lineChart" style="width: 500px;height:400px; left: 15px;"></div>
    </div>

    <div id="map">

    </div>

    <script>
        var myChart = echarts.init(document.getElementById('pieChart'));
        option = {
            title: {
                text: '当年各因子占比饼图',
                subtext: '仅包含已计算数据',
                left: 'center',
                textStyle: {
                    color: "#fff"
                }
            },
            tooltip: {
                trigger: 'item'
            },
            legend: {
                orient: 'vertical',
                left: 'left',
                textStyle: {
                    color: "#fff"
                }

            },
            series: [
                {
                    type: 'pie',
                    data: [],
                    emphasis: {
                        itemStyle: {
                            shadowBlur: 10,
                            shadowOffsetX: 0,
                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                        }
                    }
                }
            ]
        };
        $('.years').change(function () {
            var years = $("#years").val();
            var years_change = true;
            var types_change = false;
            $.ajax({
                url: "/",
                async: true,
                method: "POST",
                data: { years: years, years_change: years_change, types_change: types_change },
                success: function (result) {
                    myChart.hideLoading();
                    myChart.setOption({
                        series: [
                            {
                                type: 'pie',
                                data: result,
                                emphasis: {
                                    itemStyle: {
                                        shadowBlur: 10,
                                        shadowOffsetX: 0,
                                        shadowColor: 'rgba(0, 0, 0, 0.5)'
                                    }
                                }
                            }
                        ]
                    })
                }
            });
        });
        myChart.setOption(option);

        var myChart1 = echarts.init(document.getElementById('lineChart'));
        option1 = {
            title: {
                text: '因子年际变化图',
                subtext: '仅包含已计算数据',
                left: 'center',
                textStyle: {
                    color: "#fff"
                }
            },
            xAxis: {
                type: 'category',
                data: [],
                textStyle: {
                    color: "#fff"
                }
            },
            yAxis: {
                type: 'value',
                textStyle: {
                    color: "#fff"
                }
            },
            series: [
                {
                    data: [],
                    type: 'line',
                    symbol: 'triangle',
                    symbolSize: 8,
                    lineStyle: {
                        color: '#5470C6',
                        width: 3,
                        type: 'dashed'
                    },
                    itemStyle: {
                        borderWidth: 3,
                        borderColor: '#EE6666',
                        color: 'yellow'
                    }
                }
            ]
        };
        $('.types').change(function () {
            var types = $("#types").val();
            var years_change = false;
            var types_change = true;
            $.ajax({
                url: "/",
                async: true,
                method: "POST",
                data: { types: types, years_change: years_change, types_change: types_change },
                success: function (result) {
                    xdata = [];
                    sdata = [];
                    result.forEach(calc => {
                        xdata.push(calc.year);
                        sdata.push(calc.value);
                    });
                    myChart1.hideLoading();
                    myChart1.setOption({
                        xAxis: {
                            type: 'category',
                            data: xdata,
                            textStyle: {
                                color: "#fff"
                            }
                        },
                        series: [
                            {
                                data: sdata,
                                type: 'line',
                                symbol: 'triangle',
                                symbolSize: 8,
                                lineStyle: {
                                    color: '#5470C6',
                                    width: 3,
                                    type: 'dashed'
                                },
                                itemStyle: {
                                    borderWidth: 3,
                                    borderColor: '#EE6666',
                                    color: 'yellow'
                                }
                            }
                        ]
                    })
                }
            });
        });
        myChart1.setOption(option1);
    </script>
</div>