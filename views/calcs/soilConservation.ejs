<div class="form-input">
<form action="/add/soilConservation" method="POST" enctype="multipart/form-data">
    <% if (message) { %>
        <%= message %>
            <% } %>
    <div class="form-row">
        <div class="form-item">
            <label>计算年份</label>
            <input type="number" name="year" min="1980" max="2025" required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>为降雨侵蚀力因子</label>
            <input type="file" name="f1" required accept=".tif, .tiff|image/*">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>土壤可蚀性因子</label>
            <input type="file" name="f2" required accept=".tif, .tiff|image/*">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>坡长</label>
            <input type="file" name="f3" required accept=".tif, .tiff|image/*">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>坡度</label>
            <input type="file" name="f4" required accept=".tif, .tiff|image/*">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>植被覆盖</label>
            <input type="file" name="f5" required accept=".tif, .tiff|image/*">
        </div>
    </div>

    <div class="form-row">
        <div class="form-item">
            <label>土壤肥力</label>
            <input type="file" name="f6" required accept=".tif, .tiff|image/*">
        </div>
    </div>

    <a class="btn btn-a" href="/">取消</a>
    <button class="btn btn-primary" type="submit">确定</button>
</form>
</div>