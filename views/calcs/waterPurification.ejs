<div class="form-input">
    <form action="/add/waterPurification" method="POST" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-item">
                <label>计算年份</label>
                <input type="number" name="year" min="1980" max="2025" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-item">
                <label>降雨量(mm/a)</label>
                <input type="file" name="f1" accept=".tif, .tiff|image/*" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-item">
                <label>地表径流(mm/a)</label>
                <input type="file" name="f2" accept=".tif, .tiff|image/*" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-item">
                <label>蒸散发量(mm/a)</label>
                <input type="file" name="f3" accept=".tif, .tiff|image/*" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-item">
                <label>湖泊水质净化价格(元/hm²)</label>
                <input type="file" name="f4" accept=".tif, .tiff|image/*" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-item">
                <label>水质净化单价(参考值2.09/t)</label>
                <input type="text" name="t1" required>
            </div>
        </div>

        <a class="btn btn-a" href="/">取消</a>
        <button class="btn btn-primary" type="submit">确定</button>
    </form>
</div>